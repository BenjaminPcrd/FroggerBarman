<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="styleBG" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Vue.MenuController">
   <children>
      <Button id="buttonStyle" onAction="#buttonJouer"  stylesheets="@Menu.css" text="Jouer">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <ChoiceBox id="CBStyle" fx:id="lvl" onAction="#updateLvl" stylesheets="@Menu.css" value="Facile">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Facile" />
                    <String fx:value="Normal" />
                    <String fx:value="Hardcore" />
                    <String fx:value="DrunkMode" />
            </items>
        </ChoiceBox>
      <ListView id="LVStyle" fx:id="listeScores" prefHeight="200.0" prefWidth="200.0">

      </ListView>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
